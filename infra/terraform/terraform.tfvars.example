aws_region = "ap-southeast-1"
project = "booppa"
create_vpc = true
domain_name = "booppa.io"
# hosted_zone_id = "ZXXXXXXXXXXXXX" # fill with your Route53 Hosted Zone ID if you want DNS automation
# db_password = "REPLACE_ME" # do NOT commit secrets; create a terraform.tfvars locally with this value
# s3_bucket_name = "" # optional

# Optional: adjust subnet cidrs
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.101.0/24", "10.0.102.0/24"]

# ECS sizing
app_desired_count = 1
app_cpu = 256
app_memory = 512

# RDS
rds_multi_az = false
